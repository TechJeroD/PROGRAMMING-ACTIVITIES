#include <iostream>
#include <string>
using namespace std;

int main() {
    string search;
    cout << "What do you want to search?: ";
    cin >> search;

    if (search == "ALGORITHM") {
        cout << "A SET OF INSTRUCTIONS FOR SOLVING A PROBLEM" ;
    }
    else if (search == "BANDWIDTH") {
        cout << "THE RATE OF DATA TRANSFER" ;
    }
    else if (search == "CAPACITANCE") {
        cout << "THE ABILITY OF A COMPONENT TO STORE ENERGY" ;
    }
    else if (search == "CIRCUIT") {
        cout << "A CLOSED LOOP THROUGH WHICH ELECTRICITY FLOWS" ;
    }
