    }
    else if (search == "LOAD") {
        cout << "AN APPLIED FORCE OR WEIGHT" ;
    }
    else if (search == "MODULE") {
        cout << "A SELF-CONTAINED COMPONENT OF A LARGER SYSTEM" ;
    }
